{
    "language": "en",
    "caseSensitive": false,
    "dictionaries": [
        "balena", "computerTerms",
        "en_US",
        "companies", "softwareTerms", "misc",
        "javascript", "python", "typescript", "go",
        "npm", "node", "html", "css", "cpp"
    ],
    "dictionaryDefinitions": [
        {
            "name": "balena",
            "path": "./.cspell/balena-words.txt",
            "addWords": true
        },
        {
            "name": "computerTerms",
            "path": "./.cspell/computer-terms.txt",
            "addWords": true
        }
    ],
    "files": [
        "config/*.md",
        "pages/*.md",
        "shared/*.md",
        "templates/*.md",
        "*.md"
    ],
    "exclude": ["*/*.svg"],
    "ignorePaths": ["node_modules","CHANGELOG.md"]
}